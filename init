#!/usr/bin/env nash

PLAN9  = "/usr/local/plan9"
GOPATH = $HOME + "/projects/go-workspace"
GOROOT = $HOME + "/projects/personal/go"
LBIN   = $HOME + "/bin"
DPATH  = "/bin:/sbin:/usr/bin:/usr/sbin:/usr/local/bin"
PATH   = $DPATH + ":" + $PLAN9 + "/bin:" + $LBIN + ":" + $GOROOT + "/bin:" + $GOPATH + "/bin"

setenv GOPATH
setenv PATH
setenv GOROOT

# PROMPT is a special variable used by nash command line to
# setup your prompt.
RED   = "\033[31m"
GREEN = "\033[32m"
RESET = "\033[0m"

PROMPTSYM =  "Î»> "
DEFPROMPT = $RED + $PROMPTSYM + $RESET

PROMPT = $DEFPROMPT

setenv PROMPT

# cd overrides built-in cd
# Add the current branch before prompt (if current directory is a git repo)
fn cd(path) {
        cd $path

        -test -d ./.git

        if $status != "0" {
                PROMPT = $DEFPROMPT
        } else {
                branch <= git rev-parse --abbrev-ref HEAD | xargs echo -n
                PROMPT = "(" + $GREEN + $branch + $RESET + ")" + $DEFPROMPT
        }

        setenv PROMPT
}

bindfn cd cd

# syntax sugar to cd into go project
fn gocd(path) {
    cd $GOPATH + "/src/" + $path
}

bindfn gocd gocd
