# Setup environment variables
PLAN9      = "/usr/local/plan9"
ACMEPATH   = $HOME+"/acme"
GOPATH     = $HOME+"/projects/go-workspace"
GOROOT     = $HOME+"/projects/personal/go"
LBIN       = $HOME+"/bin"
FZFPATH    = $HOME+"/.fzf"
SMLNJPATH  = $HOME+"/projects/personal/smlnj"
MLTONPATH  = $HOME+"/projects/personal/mlton"

# name required by PONYO
PONYO_ROOT = $HOME + "/projects/3rdparty/ponyo"

DPATH = "/bin:/sbin:/usr/bin:/usr/sbin:/usr/local/bin"
PATH = $DPATH+":"+$PLAN9+"/bin:"+$LBIN+":"+$GOROOT+"/bin:"+$GOPATH+"/bin:"+$FZFPATH+"/bin:"+$ACMEPATH+":"+$MLTONPATH+"/bin:"+$SMLNJPATH+"/bin:" + $PONYO_ROOT + "/bin"

LANG = "en_US.UTF-8"
SHELL = $HOME+"/projects/go-workspace/bin/nash"

IFS = ("\n")

setenv SHELL
setenv LANG
setenv PLAN9
setenv GOPATH
setenv GOROOT
setenv PATH
setenv ACMEPATH
setenv SMLNJPATH
setenv MLTONPATH
setenv PONYO_ROOT
