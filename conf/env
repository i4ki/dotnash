DPATH   = "/bin:/sbin:/usr/bin:/usr/sbin:/usr/local/bin"

PATH   = $DPATH + ":" + $PLAN9 + "/bin:" + $LBIN + ":" + $GOROOT + "/bin:" + $GOPATH + "/bin:" + $FZFPATH + "/bin:" + $HAXE_HOME + ":" + $UE4PATH + ":" + $MLTONPATH + "/install/usr/bin:" + $SMLNJPATH + "/bin:" + $SMACKAGEPATH + "/bin:" + $SMACKAGE_HOME + "/bin"

LANG   = "en_US.UTF-8"
